@using Car_Sale_Web_Site.Classes
@model Car_Sale_Web_Site.Models.Message

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Message</h4>
    <hr/>
    <dl class="dl-horizontal">


        <dt>
            From
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthorMsgUserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            Message
        </dt>

        <dd>
            <pre>
            @Html.DisplayFor(model => model.MyMessage)
                   
        </pre>

        </dd>

        <dt>
            Received
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

    </dl>
</div>
<div style="text-align: center; font-weight: 700">
    @Html.ActionLink("Reply", "Create", "Messages",
         new
         {
             ToUser = Model.AuthorMsgUserName,

         }, null
         )
</div>
<p>
    @Html.ActionLink("Back to Messages", "Index")
</p>
