@model  Car_Sale_Web_Site.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>
    <font color="red">
        Are you sure you want to delete this User?
        Deleting the user will also delete all posts, created by this user!
    </font>
</h3>

<br />

<div>
    <table class="table" style="text-align:center">
        <tr>
            <th style="text-align:center">
                Full name
            </th>
            <th style="text-align:center">
                User name
            </th>
            <th style="text-align:center">
                Phone number
            </th>
            <th style="text-align:center">
                Email adress
            </th>
            <th style="text-align:center">
                Role
            </th>
            <th style="text-align:center">
                Number of posts
            </th>
        </tr>

        <tr>
            <td style="padding-top:40px; text-align:center">
                @Html.DisplayFor(modelItem => Model.FullName)
            </td>
            <td style="padding-top:40px; text-align:center">
                @Html.DisplayFor(modelItem => Model.UserName)
            </td>
            <td style="padding-top:40px; text-align:center">
                @Html.DisplayFor(modelItem => Model.PhoneNumber)
            </td>
            <td style="padding-top:40px; text-align:center;">
                @Html.DisplayFor(modelItem => Model.Email)
            </td>
            <td style="padding-top:40px; text-align:center">
                @Html.DisplayFor(modelItem => Model.role)
            </td>
            <td style="padding-top:40px; text-align:center">
                @Html.DisplayFor(modelItem => Model.postsNumber)
            </td>
        </tr>
    </table>
    <hr />

    <div class="form-actions no-color">
        @Html.ActionLink("Delete", "Delete2", new { id = Model.Id }, new { @class = "btn btn-primary btn-large" })  |
        <input type="button" value="Go Back" onclick="history.go(-1);return false;" class="btn btn-default" style="border-color:blue">
    </div>
</div>

